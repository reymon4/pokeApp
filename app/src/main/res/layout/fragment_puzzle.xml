<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".ui.fragments.PuzzleFragment">

    <LinearLayout
        android:id="@+id/layout_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_puzzle"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="10dp">
        </ImageView>

        <Button
            android:id="@+id/btn_opt1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/khaki"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Option1"
            android:textAlignment="center"
            android:textColor="@color/navy_blue"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_opt2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/khaki"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Option2"
            android:textAlignment="center"
            android:textColor="@color/navy_blue"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_opt3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/khaki"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Option3"
            android:textAlignment="center"
            android:textColor="@color/navy_blue"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_opt4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/khaki"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Option4"
            android:textAlignment="center"
            android:textColor="@color/navy_blue"
            android:textSize="25dp" />


    </LinearLayout>
    <TextView
        android:id="@+id/txt_winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WINNER!"
        android:fontFamily="@font/nunito_sans_bold"
        android:textSize="50dp"
        android:textColor="@color/navy_blue"
        android:gravity="center"
        android:layout_marginTop="200dp">
    </TextView>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"

        app:lottie_loop="true"
        app:lottie_rawRes="@raw/load_puzzle" />

</FrameLayout>